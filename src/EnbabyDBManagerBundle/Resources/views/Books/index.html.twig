{% extends '::base.html.twig' %}
{% block title %}Index of Books{% endblock %} 

{% block body %}

<div class="container">
	<div class="page-header">
		
	</div>

	<div class="bs-component">
		<div class="rows">
			<legend class="col-lg-4">Books</legend>
			<div class="col-lg-4">
				<a href="{{path('books_info',{'isbn':'new'})}}" class="btn btn-link">Import New Book</a>
			</div>
			
		</div>
		
		<table class="table table-striped table-hover">
			<thead>
				<tr class="info">
					<th>#</th>
					<th>Book</th>
					<th>ISBN</th>
					<th>Edit</th>
				</tr>
			</thead>
			<tbody>
				{% for s in index%}
				<tr >
					<td>{{loop.index}}</td>
					<td>{{s.displayName}}</td>
					<td>{{s.isbn}}</td>
					<td><a href="{{path('books_info',{'isbn':s.isbn})}}" class='btn-link'>edit</a></td>
				</tr>
				{%endfor%}
			</tbody>	
		</table>
	</div>
</div>
{%endblock%}