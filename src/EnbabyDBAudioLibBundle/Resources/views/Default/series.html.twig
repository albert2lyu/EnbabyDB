{% extends '::mobile.html.twig' %}

{% block title %}
{{ series.displayName }}
{% endblock %}

{% block header %}
<a href="{{path('audiolib_series_index')}}" class="ui-icon-home ui-btn ui-shadow ui-nodisc-icon  ui-btn-inline ui-btn-icon-left" data-transition="slide" data-direction="reverse">首页</a>
<h1>专辑：{{ series.displayName }}</h1>
{% endblock %}

{% block content %}
	<p><strong>专辑：</strong>{{series.displayName }}</p>
	<img style="width:100%" src="{{series.Snapshot}}">
	<p><strong>简介：</strong>{{ series.Description }}</p>
	<ul data-role="listview" data-inset="true">
		<li data-role="divider" data-theme="b">书目</li>
		{% for book in books%}
		<li><a href="{{path('audiolib_books_info',{'isbn':book.isbn})}}" data-transition="slide">{{book.displayName}}</a></li>
		{%endfor%}
	</ul>
{% endblock %}

{% block footer %}
<h1>{{ series.displayName }}</h1>
{% endblock %}
