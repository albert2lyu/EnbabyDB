{% extends '::mobile.html.twig' %}

{% block title %}
{{ book.DisplayName }}
{% endblock %}

{% block javascript %}

{% endblock %}

{% block mobilePagejavascript %}
<script type="text/javascript" src="/js/soundmanager2-nodebug-jsmin.js"></script>
<script src="/js/bar-ui.js"></script>
<link rel="stylesheet" href="/css/bar-ui.css" />
{% endblock %}

{% block header %}
<a data-rel="back" class="ui-icon-arrow-l ui-btn ui-shadow ui-nodisc-icon  ui-btn-inline ui-btn-icon-left"  data-transition="slide" data-direction="reverse">专辑</a>
<h1>{{ book.DisplayName }}</h1>
<a href="#declarePage" class="ui-icon-info ui-btn ui-shadow ui-nodisc-icon  ui-btn-inline ui-btn-b ui-btn-icon-notext  " data-rel="dialog" data-iconshadow="false" data-transition="flip" data-iconpos="notext">申明</a>
{% endblock %}

{% block content %}
<img style="width:100%;"src="{{book.Snapshot}}" alt="Snapshot" >
<p><strong>{{ book.DisplayName }}</strong></p>
<p> <small>作者: </small><em>{{ book.Author }}</em></p>
<p>{{ book.Description }}</p>
<div id="audioArea">
	{% if audios_en or audios_cn %}
	<strong>绘本试听</strong>
	{% endif %}
	{% if audios_en %}
	<div class="sm2-bar-ui compact full-width">
		<div class="bd sm2-main-controls">
			<div class="sm2-inline-texture"></div>
			<div class="sm2-inline-gradient"></div>
			<div class="sm2-inline-element sm2-button-element">
				<div class="sm2-button-bd"><a href="#play" class="sm2-inline-button play-pause">Play / pause</a></div>
			</div>
			<div class="sm2-inline-element sm2-inline-status">
				<div class="sm2-playlist">
					<div class="sm2-playlist-target">
						<!-- playlist <ul> + <li> markup will be injected here -->
						<!-- if you want default / non-JS content, you can put that here. -->
						<noscript><p>JavaScript is required.</p></noscript>
					</div>
				</div>
				<div class="sm2-progress">
					<div class="sm2-row">
						<div class="sm2-inline-time">0:00</div>
						<div class="sm2-progress-bd">
							<div class="sm2-progress-track">
								<div class="sm2-progress-bar"></div>
								<div class="sm2-progress-ball"><div class="icon-overlay"></div></div>
							</div>
						</div>
						<div class="sm2-inline-duration">0:00</div>
					</div>
				</div>
			</div>
			<div class="sm2-inline-element sm2-button-element sm2-volume">
				<div class="sm2-button-bd">
					<span class="sm2-inline-button sm2-volume-control volume-shade"></span>
					<a href="#volume" class="sm2-inline-button sm2-volume-control">volume</a>
				</div>
			</div>
		</div>
		<div class="bd sm2-playlist-drawer sm2-element">
			<div class="sm2-inline-texture">
				<div class="sm2-box-shadow"></div>
			</div>
			<!-- playlist content is mirrored here -->
			<div class="sm2-playlist-wrapper">
				<ul class="sm2-playlist-bd">
				{% for a_en in audios_en %}
					<li><a href="{{a_en}}"><b>(英语)</b>{{book.DisplayName}}</a></li>
				{% endfor %}
				</ul>
			</div>
		</div>
	</div>
	{% endif %}
	{% if audios_cn %}
	<div class="sm2-bar-ui compact full-width">
		<div class="bd sm2-main-controls">
			<div class="sm2-inline-texture"></div>
			<div class="sm2-inline-gradient"></div>
			<div class="sm2-inline-element sm2-button-element">
				<div class="sm2-button-bd"><a href="#play" class="sm2-inline-button play-pause">Play / pause</a></div>
			</div>
			<div class="sm2-inline-element sm2-inline-status">
				<div class="sm2-playlist">
					<div class="sm2-playlist-target">
						<!-- playlist <ul> + <li> markup will be injected here -->
						<!-- if you want default / non-JS content, you can put that here. -->
						<noscript><p>JavaScript is required.</p></noscript>
					</div>
				</div>
				<div class="sm2-progress">
					<div class="sm2-row">
						<div class="sm2-inline-time">0:00</div>
						<div class="sm2-progress-bd">
							<div class="sm2-progress-track">
								<div class="sm2-progress-bar"></div>
								<div class="sm2-progress-ball"><div class="icon-overlay"></div></div>
							</div>
						</div>
						<div class="sm2-inline-duration">0:00</div>
					</div>
				</div>
			</div>
			<div class="sm2-inline-element sm2-button-element sm2-volume">
				<div class="sm2-button-bd">
					<span class="sm2-inline-button sm2-volume-control volume-shade"></span>
					<a href="#volume" class="sm2-inline-button sm2-volume-control">volume</a>
				</div>
			</div>
		</div>
		<div class="bd sm2-playlist-drawer sm2-element">
			<div class="sm2-inline-texture">
				<div class="sm2-box-shadow"></div>
			</div>
			<!-- playlist content is mirrored here -->
			<div class="sm2-playlist-wrapper">
				<ul class="sm2-playlist-bd">
				{% for a_cn in audios_cn %}
					<li><a href="{{a_cn}}"><b>(中文)</b>{{book.DisplayName}}</a></li>
				{% endfor %}
				</ul>
			</div>
		</div>
	</div>
	{% endif %}
</div>
{% endblock %}

{% block footer %}
<h1>{{book.DisplayName}}</h1>
{% endblock %}



{% block footerjavascript%}

{% endblock %}